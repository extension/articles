<h1>Articles without a community tag (orphaned pages)</h1>

 <p id="csv"><%= link_to('Download a list of these articles (csv)',:action => 'orphaned', :download => 'csv') %> </p>
 <table class="table table-striped report_table">
     <tr>
         <th>Page ID</th>
         <th>Page Type</th>
         <th>Published Title</th>
         <th>Published At</th>
         <th>Updated At</th>
         <th>Source</th>
         <th>Page Info</th>
     </tr>

     <% for page in @pages %>
         <tr id="article_row_<%= page.id %>">
            <td><%= page.id %></td>
            <td><%= page.datatype %></td>
            <td><%= link_to(page.title, page.id_and_link) %></td>
            <td><%= humane_date(page.source_created_at) %></td>
            <td><%= humane_date(page.source_updated_at) %></td>
            <td><%= link_to('Source Link',page.source_url)%></td>
            <td><%= link_to('details',pageinfo_page_url(:id => page.id))%></td>
         </tr>
     <% end%>
 </table>
 </div>
