<% index_start = (items.current_page - 1) * items.per_page + 1 %>
<ol class="articlelist" start="<%= index_start %>;">
<%- items.each do |item| -%>
    <li>
        <%= link_to(item.title,page_url(:id => item.id, :title => item.url_title)) -%>
        <span class="published">Updated: <%= expanded_time_print(item.source_updated_at)%></span>
    </li>
<%- end -%>
</ol>

<%if items.length == 0 %>
	<h2>There are currently no matches for this resource area.</h2>
<%end%>

