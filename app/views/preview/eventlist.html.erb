<%- if @content_tag.nil? %>
   <p>Invalid content tag</p>
<%- else -%>
   <h1>All Events for Tag: <%= @content_tag.name %></h1>

   <div id="paginator_wrapper"> 
   <% if @events.length > 0 %>
       <p class="display_results">Displaying <strong><%= @events.offset + 1 %>-<%= @events.offset + @events.length %></strong> of <strong><%= @events.total_entries %></strong></p>
   <% else %>
       <p class="display_results">Displaying <strong>0</strong> of <strong>0</strong></p>
   <% end %>

   <%= will_paginate @events %>
   </div>


   <table cellspacing="0" border="1">
       <tr>
           <th>Published Title</th>
           <th>Published At</th>
           <!-- <th>Source</th>  -->
       </tr>
    
       <% for event in @events %>
           <tr id="faq_row_<%= event.id %>">
              <td><%= link_to(event.title, events_page_url(event)) %></td>
              <td><%= humane_date(event.xcal_updated_at) %></td>
           </tr>
       <% end%>
   </table>


   <div id="paginator_wrapper"> 
   <% if @events.length > 0 %>
       <p class="display_results">Displaying <strong><%= @events.offset + 1 %>-<%= @events.offset + @events.length %></strong> of <strong><%= @events.total_entries %></strong></p>
   <% else %>
       <p class="display_results">Displaying <strong>0</strong> of <strong>0</strong></p>
   <% end %>

   <%= will_paginate @events %>
   </div>
<%- end -%>
