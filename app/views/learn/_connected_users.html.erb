<%- if(!@connected_users.blank?) -%>
     <%- if @learn_session.event_started? -%>
       <h3>People connected with this session</h3>
       <p><em>(* indicates attendance)</em></p>
     <%- else -%>
       <h3>People connected with this session</h3>
     <%- end -%>
     <ul>
        <%- @connected_users.each do |user_id,info| -%>
          <li><%= link_to(info[:user].fullname, :controller => '/learn', :action => :profile, :id => info[:user].login) %>
            <%- if @learn_session.event_started? and info[:primaryconnectiontype] == LearnConnection::ATTENDED -%>
              *
            <%- end -%>
          </li>
         <%- end -%>
     </ul>
<%- end -%>