<%- if !@showuser -%>
  <%- @page_title = "Unknown User" -%>
  <h1>Unknown person specified.</h1>
<%- elsif(!@currentuser.nil?)-%>
  <% @page_title = @showuser.fullname %>

  <div id="two_col_col_one" class="profile">
     <h1>
     <%= @showuser.fullname %>
     </h1>
   
     <div id="profile_details">
     <p>
  		<span class="label">Email:</span>
  		<span><%= @showuser.email%></span>
  	</p>
	
  	<%- if @showuser.phonenumber.nil? or @showuser.phonenumber == '' %>
  	<%- else -%>
  	<p>
  		<span class="label">Preferred Phone:</span>
  		<span><%= number_to_phone(@showuser.phonenumber, :area_code => true) %></span>
  	</p>
  	<%- end -%>
  	<p>
  		<span class="label">Title:</span>
  		<span><%= (@showuser.title.nil? or @showuser.title == '') ? '&nbsp;': @showuser.title %></span>
  	</p>
  	<p>
  		<span class="label">Position:</span>
  		<span><%= (@showuser.position.nil? or @showuser.position == '') ? '&nbsp;': @showuser.position.name %></span>
  	</p>
	
  	<%- if !@showuser.primary_institution.nil? -%>
  		<p>
  			<span class="label">Primary Institution:</span>
  			<span><%= @showuser.primary_institution_name('&nbsp;') %></span>
  		</p>
     <%- end -%>
   
     <p>
        <span class="label" >Location:</span>
        <span><%= (@showuser.location.nil? or @showuser.location == '') ? '&nbsp;': @showuser.location.name %></span>
  	</p>
  	<p>
        <span class="label">County:</span>
  		<span><%= (@showuser.county.nil? or @showuser.county == '') ? '&nbsp;': @showuser.county.name %></span>
  	</p>
  	</div>
	
  	<h4>Sessions Presented</h4>
  	   <% if @sessions_presented.length > 0 %>
  	     <ul id="profile_sessions">
  	     <% @sessions_presented.each do |learn_session| %>
  	       <li><span class="profile_date"><%= format_learn_time(learn_session, learn_session.session_start).strftime("%b %e, %Y") %></span> <%= link_to learn_session.title, {:action => :event, :id => learn_session.id}, {:class => "profile_link"} %></li>
  	     <% end %>
  	     </ul>
  	   <% else %>
  	     <p>No Sessions Presented to Date</p>
  	   <% end %>
  </div>

  <div id="two_col_col_two">
     <aside id="socialnetworks" class="radius10">
        <h3>Social Network Identities</h3>
        <p><%= link_to("eXtension People Profile", :controller => '/people/colleagues', :action => :showuser, :id => @showuser.login) %></p>
        <% if !@showuser.social_networks.empty? %>
            <div id="showuser_socialnetworks">
                <% @showuser.social_networks.each do |social_network| %>
                    <dl class="usernetwork">
                        <dt class="<%= social_network_class(social_network.network) %>"><%= social_network_link(social_network) %></dt>
                    </dl>
                <% end %>
            </div>
        <% end %>
     </aside>
  </div>
<%- else -%>
  <% @page_title = "Private" %>
  <h1>This information available to logged in users only.</h1>
<%- end -%>

    
