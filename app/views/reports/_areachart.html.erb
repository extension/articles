<script type="text/javascript">
	  google.load("visualization", "1", {packages:["areachart"]});
	  
	  // Set a callback to run when the API is loaded.
      google.setOnLoadCallback(queryData);
    
	function queryData() {
	  // Replace the data source URL on next line with your data source URL.
	  var query = new google.visualization.Query('<%= chart_options[:querysource] %>');
	  Element.show('loading');
	  query.send(handleQueryResponse);
    }


  function handleQueryResponse(response) {
    Element.hide('loading');

  	if (response.isError()) {
    	alert('Error in query: ' + response.getMessage() + ' ' + response.getDetailedMessage());
    	return;
  	}


  	var data = response.getDataTable();
	var chart = new google.visualization.AreaChart(document.getElementById('<%= chart_options[:chartdiv] %>'));
    chart.draw(data, {width: <%= chart_options[:width] %>, height: <%= chart_options[:height] %>, legend: '<%= chart_options[:legend] %>', title: '<%= chart_options[:title] %>',lineSize: <%= chart_options[:lineSize] %>, pointSize: <%= chart_options[:pointSize] %>});
  }
</script>
