<% if !publicattributes[:fullname].nil? %>
<div class="vcard">
    <h1 class="vcardHeader"><%= showuser.fullname %></h1>
	
	<% if !publicattributes[:email].blank? %>
	<p class="item">
		<span class="vcardLabel">Email:</span>
		<span class="email"><%= showuser.email%></span>
	</p>
	<% end %>
	<% if !publicattributes[:phone].blank? %>
	<p class="item">
		<span class="vcardLabel">Preferred Phone:</span>
		<span class="tel"><%= (showuser.phonenumber.blank?) ? '&nbsp;' : number_to_phone(showuser.phonenumber, :area_code => true)%></span>
	</p>
	<% end %>
	<% if !publicattributes[:title].blank? %>
	<p class="item">
		<span class="vcardLabel">Title:</span>
		<span class="title"><%= (showuser.title.blank?) ? '&nbsp;': showuser.title %></span>
	</p>
	<% end %>
	<% if !publicattributes[:position].blank? %>
	<p class="item">
		<span class="vcardLabel">Position:</span>
		<span class="role"><%= (showuser.position.nil?) ? '&nbsp;': showuser.position.name %></span>
	</p>
	<% end %>
	<% if !publicattributes[:institution].blank? %>
	<div class="org">
		<p class="item">
			<span class="vcardLabel">Primary Institution:</span>
			<span class="organization-name"><%= showuser.primary_institution_name('&nbsp;') %></span>
		</p>
	</div>
	<div class="org">
		<p class="item">
			<span class="vcardLabel">Other/Additional Affiliation:</span>
			<span class="organization-name"><%= (showuser.affiliation.blank?) ? '&nbsp;': @currentuser.affiliation %></span>
		</p>
	</div>
	<% end %>
	<% if !publicattributes[:location].blank? or !publicattributes[:county].blank? %>
	<div class="adr">
	    <% if !publicattributes[:location].blank? %>	
		<p class="item">
			<span class="vcardLabel">Location:</span>
			<span class="region"><%= (showuser.location.nil?) ? '&nbsp;': showuser.location.name %></span>
		</p>
		<% end %>
    	<% if !publicattributes[:county].blank? %>
		<p class="item">
			<span class="vcardLabel">County:</span>
			<span class="county-name"><%= (showuser.county.nil?) ? '&nbsp;': showuser.county.name %></span>
		</p>
		<% end %>
	</div>
		<% if !publicattributes[:time_zone].blank? %>
	<p class="item">
		<span class="vcardLabel">Time zone:</span>
		<span class="tz"><%= (showuser.has_time_zone?) ? showuser.time_zone : '&nbsp;' %></span>
	</p>
	<% end %>
	<% end %>
</div>
<% end %>

