<div id="admin">
    <h1>Migrated Communities (<%= @communities.count -%>)</h1>

  <p>This list reflects the communities which have migrated to Pressable</p>

  <table class="table">
      <tr>
          <th>Community Name</th>
          <th>Public Community Name</th>
          <th>Resource Area Tag</th>
          <th>Migrated Domain</th>
          <th>Page Count</th>
          <th>Pages</th>
      </tr>

      <% @communities.each do |community|%>
      <tr class="<%= community.is_launched %>">
          <td><%= community.name %></td>
          <td <%= community.public_name.nil? ? 'class="notset"' : '' %>><%= community.public_name.nil? ? 'not set' : community.public_name %></td>
          <td><%= content_tag_url_display_name(community.primary_tag_name) %></td>
          <td><%= link_to(community.migrated_domain, community.migrated_domain) %></td>
          <td><%= number_with_delimiter(community.pages.count) -%></td>
          <td><%= link_to('View Pages', :action => 'redirects', :content_tag => content_tag_url_display_name(community.primary_tag_name))%></td>
      </tr>
      <% end%>
  </table>

</div>
