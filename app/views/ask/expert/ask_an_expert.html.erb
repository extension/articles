<h3>Personal Information</h3>

<p><em>Fields marked with an asterisk (*) are required</em></p>

<fieldset>
    <p class="simplefield">
        <label for="submitted_question[submitter_firstname]">First Name: <em class="required">*</em></label>
        <%= text_field_tag "submitted_question[submitter_firstname]", @submitted_question.submitter_firstname %>
    </p>
    <%= error_message_on "submitted_question", "submitter_firstname" %>
	<br class="clearing" />
    <p class="simplefield">
        <label for="submitted_question[submitter_lastname]">Last Name: <em class="required">*</em></label>
        <%= text_field_tag "submitted_question[submitter_lastname]", @submitted_question.submitter_lastname %>
    </p>
    <%= error_message_on "submitted_question", "submitter_lastname"%>
		<br class="clearing" />
    <p class="simplefield">
        <label for="submitted_question[zip_code]">Zip Code:</label>
        <%= text_field_tag "submitted_question[zip_code]", @submitted_question.zip_code %>
    </p>
    <%= error_message_on "submitted_question", "zip_code"%>
<br class="clearing" />
    <p class="simplefield">
        <label for="submitted_question[submitter_email]">Email: <em class="required">*</em></label>
        <%= text_field_tag "submitted_question[submitter_email]", @submitted_question.submitter_email %>
    </p>
    <%= error_message_on "submitted_question", "submitter_email"%>
</fieldset>

<h3>Category <span class="optional">(optional)</span></h3>
<p class="instructions">Tip: Questions can be answered more quickly when assigned to the correct community</p>
<fieldset class="stack_labels">
	<p>
	<%= select_tag("aae_category", options_for_select(@categories, @submitted_question.top_level_category ? @submitted_question.top_level_category.id : '')) %>
	</p>
	<%= observe_field("aae_category", :update => :subcat_div, :url => { :action => :get_aae_form_subcats }, :with => "'category_id=' + value") %>

    <p id="subcat_div">
       <% if @top_level_category %>
         <%= render(:partial => 'aae_subcats')%>
       <% end %>
    </p>
</fieldset>

<h3>Your location</h3>
<p class="instructions">Enter the location where you want the question to be directed</p>
<fieldset class="stack_labels">
	<p><%= render(:partial => 'shared/location_county') %></p>
</fieldset>

<h3>Your question</h3> 
<p class="instructions">Before submitting your question, we will search eXtension and show you the results.</p>
<fieldset>
    <label for="submitted_question[asked_question]" class="field-textarea"> 
    <%= text_area_tag "q", (@submitted_question.asked_question) ? @submitted_question.asked_question : '', :cols => "60", :rows => "3", :id => "submitted_question_asked_question", :disabled => @disableform %> <%= error_message_on "submitted_question", "asked_question"%>
    </label>
</fieldset>
