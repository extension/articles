<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<meta name="robots" content="noindex" /> 
  
    <% if !@openidmeta.nil? %><%= @openidmeta %><% end %>
	<% if !@feedlink.nil? %><%= @feedlink %><% end %>
    <title><%= @page_title || controller.action_name %> - eXtension People</title>
    
    <% if @mobile_device %>
        <meta name = "viewport" content = "width = device-width, user-scalable = yes">
        <%= stylesheet_link_tag 'mobile_people' %>
    <% else %>
        <%= stylesheet_link_tag 'common' %>
        <%= stylesheet_link_tag 'identity' %>
    <% end %>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'tooltip' %>
	<%= javascript_include_tag 'identity' %>
</head>
    
<body>
    <% if(@app_location_for_display != 'production' and @app_location_for_display != 'shownav' )%>
    	<div id="app_location" class="<%= @app_location_for_display %>"><p>You are viewing the <strong><%= @app_location_for_display %></strong> site</p></div>
    <% end %>
    
    <% if !@mobile_device %>
	<div id="pageBanners">
		<%= render(:partial => 'people/partial/pageBanners', :locals => {:adminmode => admin_mode?}) %>
	</div>
	<% end %>
	
	<%- if(admin_mode?) -%>
	  <div id="adminnotice">
      <div id="container">
        <p><strong>You are logged into an admin account</strong> </p>
      </div>	
    </div>
 <%- end -%>
	  
	<%= render(:partial => 'partial/away_notice') %>
	
	<div id="pageContainer">
		<div id="masthead">
			<h1<%= session[:last_opierequest] ? " class='one-stop-signin'" : '' %>><%= link_to("eXtension People", people_welcome_url) %></h1>
			<% if !@mobile_device %>
			<%= render(:partial => 'people/partial/userinfo') %>
			<% end %>
		</div>
		<% if !@currentuser.nil? %>
		<ul id="primaryNav">
			<%= render(:partial => 'people/partial/primaryNav', :locals => {:adminmode => admin_mode?}) %>
		</ul>
		<% end %>
		<div id="pageContent">
			<div id="content">
				<%= @content_for_layout %>
			</div>
			<br class="clear" />
		</div>
		<% if @mobile_device %>
		<%= render(:partial => 'people/partial/userinfo') %>
    	<div id="pageBanners">
    		<%= render(:partial => 'people/partial/pageBanners', :locals => {:adminmode => admin_mode?}) %>
    	</div>
    	<% end %>
    	
    	
		
		<%= render(:partial => 'people/partial/footer') %>
	</div>
	<!-- end #pageContainer -->
	<%= render(:partial => 'people/partial/googleanalytics') %>
</body>
</html>
