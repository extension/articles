<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
	
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />

    <title>eXtension Ask: <%= @page_title || controller.action_name %></title>
    
    <% if @mobile_device %>
        <meta name = "viewport" content = "width = device-width, user-scalable = yes">
        <%= stylesheet_link_tag 'mobile_aae' %>
    <% else %>
        <%= stylesheet_link_tag 'common' %>
        <%= stylesheet_link_tag 'aae' %>
        <%= stylesheet_link_tag 'aae_print', :media => 'print' %>
    <% end %>

    <%= javascript_include_tag 'prototype' %>
    <%= javascript_include_tag 'effects' %>
    <%= javascript_include_tag 'heureka' %>
    <%= javascript_include_tag 'tooltip' %>
    <%= calendar_date_select_includes "silver" %>
 	
</head>
    
<body id="aae">
    <% if (@app_location_for_display != 'production') %>
        <div id="app_location" class="<%= @app_location_for_display %>">
            <p>You are viewing the <strong><%= @app_location_for_display %></strong> site.</p>
        </div>
    <% end %>
    
    <% if !@mobile_device %>
        <%= render(:partial => 'aae/partial/global_nav_banner') %>
    <% end %>
    <div id="pageContainer">
        <div id="masthead">
            <h1><%= link_to("eXtension Ask an Expert", incoming_url) %></h1>
            <ul id="app_toggle">
                <li><span>The FAQ link can now be found at the top of the page</span></li>
            </ul>
            
            
            <% if !@mobile_device %>
                <ul id="userinfo">
                    <%- if(!@currentuser.nil?) -%>
                        <li><%= link_to "reports", {:controller => "reports"} %></li>
                        <li><%= link_to(@currentuser.login, aae_profile_url(:id => @currentuser.login), :class => "usericon") %></li>
                        <li id="prefs"><%= link_to "preferences", :controller => 'aae/prefs', :action => 'index' %></li>
                        <li><%= link_to "sign out", :controller => 'people/account', :action => :logout %></li>
                    <%- end -%>
                </ul>
            
                <% if @currentuser.is_admin? %>
            		<p id="admintoggle"><strong>Admin Mode</strong>: <span id="admin_mode_block"><%= admin_mode_text %></span></p>
            	<% end %>
            <% end %>
        </div>
        
        <div id="pageContent">
            <ul id="aaelinks" <%= 'class="narrow"' if @menu_partial_to_display %>>
                <li <%= selected_tab_if(:incoming_questions) %>><%= link_to "Incoming", incoming_url %></li> <!-- <strong>(35)</strong> -->
                <li <%= selected_tab_if(:assigned_questions) %>><%= link_to "Assigned to me", my_assigned_url %></li> <!-- <span class=\"zero\">(0)</span> -->
                <li <%= selected_tab_if(:my_resolved_questions) %>><%= link_to "Resolved by me", my_resolved_url %></li>
                <% if !@category %>
                    <li <%= selected_tab_if(:resolved_questions) %>><%= link_to "Resolved", resolved_url(:type => 'all') %></li>
                <% else %>
                    <li <%= selected_tab_if(:resolved_questions) %>>
                    <%= link_to "Resolved", resolved_url(:id => @category, :type => 'all') %>
                    </li>
                <% end %>
                <li <%= selected_tab_if(:spam_review) %> id="spam_review"><%= link_to "Spam Review", spam_url %></li>
            </ul>
            
            
            
            <div id="content" <%= 'class="narrow"' if @menu_partial_to_display %>>
                <%= yield :layout %>
            </div>
            
            <div id="secondary">
                <%= render(:partial => @menu_partial_to_display) if @menu_partial_to_display %>
            </div>
            
        </div>
        <!-- end #pageContent -->
        
        <% if @mobile_device %>
            <ul id="userinfo">
                <%- if(!@currentuser.nil?) -%>
                    <li><%= link_to "reports", {:controller => "reports"} %></li>
                    <li><%= link_to(@currentuser.login, aae_profile_url(:id => @currentuser.login), :class => "usericon") %></li>
                    <li id="prefs"><%= link_to "preferences", :controller => 'aae/prefs', :action => 'index' %></li>
                    <li><%= link_to "sign out", :controller => 'people/account', :action => :logout %></li>
                <%- end -%>
            </ul>
        
            <% if @currentuser.is_admin? %>
        		<p id="admintoggle"><strong>Admin Mode</strong>: <span id="admin_mode_block"><%= admin_mode_text %></span></p>
        	<% end %>
        
            <h3>Other eXtension Sites</h3>
            <%= render(:partial => 'aae/partial/global_nav_banner') %>
        <% end %>
        
        <div id="footer">
            <ul>
                <li><%= link_to("Contact Us", :controller => 'aae/help', :action => 'index') %></li>
                <li><%= link_to("Terms of Use","http://www.extension.org/main/termsofuse")%></li>
                <li>version <%= "#{AppVersion.version}" %></li>
            </ul>
        </div>

    </div>
    <!-- end #pageContainer -->
<%= render(:partial => 'aae/partial/googleanalytics') %>
 
</body>
</html>
