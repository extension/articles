<div class="multi_col_list">
<% 
       list_count = 1
       item_count = 0
       column_limit = ( communitylist.length / 3) + 1
   %>
   <%  communitylist.each do |community| %>
        <%= (item_count == 0) ? '<ul class="alpha_sort col1">' : '' %>
        <li><%= link_to(community.name, people_community_url(community.id))%></li>
        <%
            item_count += 1
            if item_count > communitylist.length
                %></ul><%
            elsif (item_count % column_limit) == 0
                list_count += 1 %>
                </ul>
                <ul class="alpha_sort col<%= list_count %>"><% 
            end
        %>
    <% end %>
</ul>
</div>
