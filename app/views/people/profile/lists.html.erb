<% @page_title = "My Lists" %>
<% @selected_tab = :my_profile %>

<%= render(:partial => 'navtabs', :locals => { :selected => 'lists' }) %>
<h1>My Lists</h1>
<%- if (!@currentuser.lists.blank?) -%>
  <table cellspacing="0" class="general_table" summary="My Lists">
    <tr>
      <th>Name</th>
      <th>Subscribers</th>
    </tr>
    <%- @currentuser.lists.each do |list| -%>
      <tr id="list_row_<%= list.id %>">
        <td><%= link_to("#{list.name}", people_list_url(list))%></td>
        <td><%= list.subscriber_count %></td>
      </tr>
    <%- end -%>
  </table>
<% else %>
  <p>You are not yet subscribed to any lists.  eXtension mailing lists are associated with communities. <%= link_to("Find a community", {:controller => '/people/communities', :action => :index})%>.</p>
<% end %>
