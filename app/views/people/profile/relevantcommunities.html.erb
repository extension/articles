<% @page_title = "Relevant Communities" %>
<% @selected_tab = :profile %>

<h2>Relevant Communities</h2>
<% if (!@relevantcommunities.blank?) %>
	<table cellspacing="0" class="general_table" summary="Relevant Communities">
		<tr>
	        <th>Name</th>
	        <th>Type</th>
	        <th>Connection</th>
        	<th>Relevancy Score</th>
	    </tr>
	    <% @relevantcommunities.each do |community,relevancy| %>
    	<tr>
			<td><%= link_to("#{community.name}", people_community_url(community))%></td>
			<td><%= community.entrytype_to_s %></td>
			<td><%= @currentuser.connection_display(community) %></td>
			<td><%= number_with_precision(relevancy,:precision => 3) %></td>
		</tr>
	<% end %>
</table>
<% else %>
	<p>You do not have any relevant communities.</p>
<% end %>
