<table class="list_stats" cellspacing="0" summary="Posting Summary">
	<th>Sender</th>
	<th>Messages</th>
	<th>Size</th>
	<% senderlist.each do |sender_id,messages,size| %>
		<tr>
			<% if sender_id != 0 %>
  		  <%- account = Account.find_by_id(sender_id) -%>
  		  <%- if account and account.class == User -%>
  			  <td><%= link_to_user(account)%></td>
  			<% elsif account and account.class == PublicUser %>
  			  <td><%= account.fullname %></td>
  			<%- else -%>
  				<td>Others</td>
  			<% end %>
			<%- else -%>
				<td>Others</td>
			<% end %>
			<td class="bignumber"><%= messages %></td>
			<td><%= number_to_human_size(size) %></td>
		</tr>
	<% end %>
</table>