<% form_tag(:action=> "invite", :id => @community.id ) do %>
    <fieldset class="search">
        <p>
            <label for="searchterm">search by eXtensionID, email address, first name, or last name:</label>
            <%= text_field_tag("searchterm","",{:size => 25, :class => 'ajaxfind'})%>
            <img alt="spinner" id="spinner" src="/images/spinner.gif" style="display:none;" />
        
        </p>
    </fieldset>
<% end %>

<%= observe_field(:searchterm,
                 :frequency => 1,
                 :loading => "Element.show('spinner')",
                 :complete => "Element.hide('spinner')",
                 :url => { :action => :xhrfinduser, :id => @community.id },
				 :with => 'searchterm') %>
				