<h1><%= link_to("Search URL Manager", :action => :manage) %> > <%= link_to("Activity", :action => :manage_activity) %></h1>

<table cellspacing="0" id="url_list">  <tr class="<%= @event.action %>">
    <td><%= link_to_user(@event.user) %></td>
    <td class="action"><span><%= @event.action %></span></td>
    <td><%= @event.url %></td>
    <td><%= @event.created_at.strftime("%l:%M %p %Y-%m-%d") %> <span class="age">(<%= time_ago_in_words(@event.created_at) %> ago)</span></td>
  </tr>
</table>