<div id="admin">
    <p><%= link_to 'Admin home', :action => :index%></p>
    <h1>Manage Communities</h1>  
  <div>
  <p>This list reflects the "eXtension Community of Practice" and other public communities created in the <%= link_to('People application', 'https://people.extension.org') %>. To add a community to this page (and the Public Site), please create a community in People.</p>
  
  <h2>eXtension Publishing Communities</h2>
  <table class="table">
      <tr>
          <th>&nbsp;</th>
          <th>Live</th>
          <th>Community Name</th>
          <th>Public Community Name</th>
          <th>Topic</th>
          <th>Resource Area Tag</th>
      </tr>

      <% @communities.each do |community|%>
      <tr class="<%= community.is_launched %>">
          <td><%= link_to('edit', :action => 'edit_public_community', :id => community.id)%></td>
          <td class="islive"><%= community.is_launched %></td>
          <td><%= community.name %></td>
          <td <%= community.public_name.nil? ? 'class="notset"' : '' %>><%= community.public_name.nil? ? 'not set' : community.public_name %></td>
          <td <%= community.topic.nil? ? 'class="notset"' : '' %>><%= community.topic.nil? ? 'not set' : community.topic.name %></td>
          <td <%= community.cached_content_tags.blank? ? 'class="notset"' : '' %>><%= community.cached_content_tags.blank? ? 'not set' : community.cached_content_tags.join(Tag::JOINER) %></td></tr>
      <% end%>
  </table>
  
  
  
  </div>

  
</div>