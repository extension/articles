<div id="widget_builder">
    <h2>Customize Your Content Widget</h2>
     
    <% form_tag({}, {:id => 'content_widget_builder'}) do %>
    
      <p><label>Content Tags:</label></p>
      <p><%= text_area_tag :tags, nil, :cols => "50", :rows => "5" %></p>

      <h4>Launched Categories (click to add)</h4>
      <ul class="select_from_tags">
      <% @launched_categories.each do |category| %>
          <li><%= link_to_remote category.name, {:url => {:action => :generate_new_widget}, :before => "addTagsToList($('tags'), '#{category.name}')", :update => 'content_widget', :submit => 'content_widget_builder', :loading => "Element.show('loading')", :complete => "Element.hide('loading')"} %></li>
      <% end %>
      </ul>
      
      <p><label>Type of Content:</label></p>
      <ul>
      <li><%= radio_button_tag(:type, 'articles', true) %> Articles</li>
      <li><%= radio_button_tag(:type, 'faqs', false) %> Faqs</li>
      <li><%= radio_button_tag(:type, 'events', false) %> Events</li>
      <li><%= radio_button_tag(:type, 'faqs_articles', false) %> Articles and Faqs</li>
      </ul>
      
      <p><label>Number of items:</label></p>
      <p><%= text_field_tag :quantity, nil, :size => 3 %></p>
      

    <% end %>
        
    <%= observe_form :content_widget_builder, 
        :url => { :action => :generate_new_widget },
        :update => 'content_widget',
        :loading => "Element.show('loading')",
        :complete    => "Element.hide('loading')"
    %>
        
</div>


<div id="loading" style="display:none"><img src='/images/loading.gif' /> Loading... </div>
<div id="content_widget">

</div>

