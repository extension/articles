<% @page_title = "Ask an Expert Widget List"%>

<%= render(:partial => 'aae_widget_nav') %>

<div id="article">

<h2>Ask an Expert Widgets</h2>

<ul id="nav">
    <li <%= selected_tab_if(:all) %>><%= link_to "Active", :controller => 'widgets/aae', :action => :list %></li>
    <li <%= selected_tab_if(:inactive) %>><%= link_to "Inactive", :controller => 'widgets/aae', :action => :list, :id => 'inactive' %></li>
</ul>

<p>
    <label>Search by Name
	    <%= text_field_tag('widget_name') %>
	    <em>Start typing to filter widgets</em>
	</label>
</p>

<%= observe_field(:widget_name,
                  :url       => { :controller => 'widgets/aae', :action => :get_widgets, :id => params[:id] },
                  :update    => :widget_list,
                  :frequency => 0.6,
                  :with      => "'widget_name=' + value")
%>

<div id="widget_list">
<%= render(:partial => 'widget_list') %>
</div>

</div>