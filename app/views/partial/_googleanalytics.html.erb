<%
case AppConfig.configtable['app_location']
    when 'production'   then puts @gaprofile = "UA-155321-2" # www.extension.org
    when 'demo'         then puts @gaprofile = "UA-155321-25" # demo.extension.org
    when 'localdev'     then puts @gaprofile = "UA-155321-0"
end
%>

<!-- GA for wwww.extension.org -->
<script type="text/javascript">
var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
</script>
<script type="text/javascript">
try {
var pageTracker = _gat._getTracker("<%= @gaprofile %>");
pageTracker._setDomainName("extension.org");
<% if !flash[:googleanalytics].nil? %>
    pageTracker._trackPageview("<%= flash[:googleanalytics] %>");
<% else  %>
    pageTracker._trackPageview();
<% end %>
} catch(err) {}</script>
