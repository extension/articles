<% @page_title = "General Statistics by State" %>

<% genstring = "General Statistics by State"%>

<div id="report">
    <p id="activity_report"><%= link_to "All Reports",  :controller => 'reports' %> &gt; <%= link_to "General Overview",  :action => 'activity' %> &gt; <%= @page_title %></p>
    
<h1><%= genstring %></h1>

<p>for questions pertaining to the state, not the state of the submitter or the responder</p>


<%= render(:partial => 'date_selection') %>


<table cellspacing="0" class="stats" summary="<%= genstring %>">
	<% even = false %> 
   <tr>
	    <th scope="col">Tag</th> 

       <th scope="col">Open</th>
       <th scope="col">Resolved</th>
       <th scope="col">Answered</th>
       <th scope="col">Rejected</th>
       <th scope="col">Responded to with 'No Expertise'</th>
    </tr>
 <%- @locationlist.each do |location| -%>
   <%- if @filteredparams.showempty or (@total_by_location[location.id] and @total_by_location[location.id] > 0) -%>
     <tr <%= ' class="shaded"' if even %>>
      <td class="left">
       <%= location.name %>
      </td>
      <td>
        <%=  @open_by_location[location.id] ? @open_by_location[location.id] : '' %>
      </td>
      <td>
        <%=  @resolved_by_location[location.id] ? @resolved_by_location[location.id] : '' %>
      </td>
      <td>
        <%=  @answered_by_location[location.id] ? @answered_by_location[location.id] : '' %>
      </td>
      <td>
        <%=  @rejected_by_location[location.id] ? @rejected_by_location[location.id] : '' %>
      </td>
      <td>
        <%=  @noanswer_by_location[location.id] ? @noanswer_by_location[location.id] : '' %>
      </td>
     </tr>
     <% even = !even %> 
   <%- end -%>
 <%- end -%>         

</table>

</div>