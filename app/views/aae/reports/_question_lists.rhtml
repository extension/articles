
<% if !(@comments || (@edits == "Submitted" || @edits == "ResolvedP" || @edits=="ResolvedM" || @edits=="New" || @edits=="Resolved"))%>
  <% if (@numb > 100)%>
    <h4><%= @limit_string%></h4>
  <% end%>
<%end%>
<table id="questionlist" class="hover">
    <tr>
	    <% if @questions.length > 0%>
        <th scope="col"><%= link_to "ID", { :action => controller.action_name,  :page => params[:page], :user => @user, :descriptor => @desc, :type => @type, :category => @catname, :location => @locid, :county => @county_id, :order_by_field => @idtype, :datefrom => @date1, :dateto => @date2, :sortorder => (params[:sortorder] != "a") ? "a" : "d" } %></th>
        <% else%>
        <th scope="col">ID</th>
        <% end%>
        <th scope="col">Question</th>
      
          <% if @questions.length > 0%>
	         <th scope="col"><%= link_to "Contributing Content", { :action => controller.action_name,  :page => params[:page], :user => @user, :descriptor => @desc,:type => @type,  :category => @catname, :location => @locid, :county => @county_id, :datefrom => @date1, :dateto => @date2, :order_by_field => 'contributing_content_id', :sortorder => (params[:sortorder] != "a")? "a": "d"} %></th>
	        <th scope="col"><%= link_to "Last Updated", { :action => controller.action_name,  :page => params[:page],  :user => @user, :descriptor => @desc,  :type => @type,  :category => @catname, :location => @locid, :county => @county_id, :datefrom => @date1, :dateto => @date2, :order_by_field => 'squpdated', :sortorder => (params[:sortorder] != "a") ? "a" : "d" } %></th>
	       <% else%>
	          <th scope="col">Converted FAQ ID</th>
	          <th scope="col">Last Updated</th>
	       <% end%>
	   
        
              
    </tr>
<% even = false %>
<% 
    @questions.each do |question|
        row_class = "shaded" if even
        
       
       %>
        <tr <%= " class='#{row_class}'" if row_class %>>
            <td class="num">
	          
                 <%= question.id %>
             
            </td>
           <% if @comments%>
              <td>
	       <% else%>
            <td class="link">
	       <% end%>
              <%= link_to strip_tags( question.asked_question), :controller => 'aae/question', :action => 'index', :id => question.id  %>
            </td>
       
            <td>
               <% if question.contributing_content%>
                <%question.responses.each do |response| %>
           
                  <% if contributing_content = response.contributing_content %>
	    	        
        	        <% if contributing_content.class == Page %>    	        
        	          <%= link_to "Page # #{contributing_content.id}", page_url(:id => contributing_content.id, :title => contributing_content.url_title) %>
        	        <% elsif contributing_content.class == SubmittedQuestion %>
        	          <%= link_to "AaE Question # #{contributing_content.id}", aae_question_url(:id => contributing_content.id) %>
        	        <% end %>
	    	        
	    	      <% end %>
	             <% end %>
               <% end%>                    
           
            </td>
            <td class="q_age">
                <%= time_ago_in_words( question.updated_at) %> ago
            </td>
            
                      
        </tr>
        <% 
        even = !even
    %>
        <% 
    end 
%>
</table>
