<% @page_title = "Ask an Expert Response Times Report" %>

<div id="report">
    
    <p id="activity_report"><%= link_to "All Reports",  :controller => 'reports' %> &gt; <%= @page_title %></p>
     
    <h1>Ask an Expert Response Times Report</h1>
    <div id="leftcal">
        
    <table class="general_table" cellspacing="0">
        <tr>
            <th colspan="2"><%= "#{Time.parse(@oldest_date.to_s).strftime('%b %e, %Y')} - #{Time.now.strftime('%b %e, %Y')} <span>(all data)</span>"%></th>
        </tr>
        <tr>
            <td>Total Incoming (Unanswered) Questions</td>
            <td class="count"><%= @number_questions_all%></td>
        </tr>
        <tr>
            <td>Average Age of Current Incoming (Unanswered) Questions</td>
            <td class="count"><%= avg_display(@avg_open_time_all)%> <%= avg_display_units(@avg_open_time_all)%></td>
        </tr>
        <tr>
            <td>Average Response Times in Past 30 Days</td>
            <td class="count"><%= avg_display(@avg_resp_past30_all) %> <%= avg_display_units(@avg_resp_past30_all)%></td>
        </tr>
        <tr >
            <td>Average Historical Response Time</td>
            <td class="count"><%= avg_display(@avg_response_time_all) %> <%= avg_display_units(@avg_response_time_all) %></td>
        </tr>
    </table>

            <ul>
            <li><%= link_to "Browse Statistics by responder location",  :action => 'response_times_by_location', :from => [@date1, @datec1], :to => [@date2, @datec2] %></li>
            <li><%= link_to "Browse Statistics by category",  :action => 'response_times_by_category', :from => [@date1, @datec1], :to => [@date2, @datec2] %></li>
            </ul>

</div>
        <div id="rightcal">
            <h2>Select a custom date range</h2>
            <%= render(:partial => 'flashmessages') %>
            <div id="calendar">
                <% form_tag({:action => params[:action], :compare_dat1 => @datec1, :compare_dat2 => @datec2,  :upper => true}) do %>

                     <h4 id="selected_range" class="period1"><%= (@dateinterval) ? "#{Time.parse(@date1.to_s).strftime('%b %e, %Y')} - #{Time.parse(@date2.to_s).strftime('%b %e, %Y')}" : "#{Time.parse(@oldest_date.to_s).strftime('%b %e, %Y')} - #{Time.now.strftime('%b %e, %Y')} <span>(all data)</span>"%></h4>
        	         <br class="clear"/>
                  
                      <%= calendar_date_select_tag "datefrom", ((@dateinterval) ? @dateinterval[0] : @oldest_date), :popup => true%><span>to</span><%= calendar_date_select_tag "dateto", ((@dateinterval) ? @dateinterval[1] : @latest_date), :popup => true%>  
                    <%= submit_tag 'Go' %>
                    <%= submit_tag 'Show all'%>
                    <ul id="search_parms">
        	            <li><%= check_box_tag(:public_sourcea, true, is_marked('public', :via_conduita)) %> questions submitted through public site</li>
        	            <li><%= check_box_tag(:widget_sourcea, true, is_marked('widget', :via_conduita)) %> questions submitted through widget</li>
        	        </ul>
                <% end%>

            </div>
            <p><strong>Compare to...</strong></p>
            <div id="calendar">
              
			
	            
                <% form_tag  ({ :action => params[:action], :dat1 => @date1, :dat2 => @date2, :lower => true}) do %>

        			<h4 id="selected_range" class="period2"><%= (@dateintervalc) ? "#{Time.parse(@datec1.to_s).strftime('%b %e, %Y')} - #{Time.parse(@datec2.to_s).strftime('%b %e, %Y')}" : "#{Time.parse(@oldest_date.to_s).strftime('%b %e, %Y')} - #{Time.now.strftime('%b %e, %Y')} <span>(all data)</span>"%></h4>
                     
                    <br class="clear"/>
        	    
                     <%= calendar_date_select_tag "datefrom", ((@dateintervalc) ? @dateintervalc[0] : @prior90th), :popup => true%><span>to</span><%= calendar_date_select_tag "dateto", ((@dateintervalc) ? @dateintervalc[1] : @latest_date), :popup => true%> 
        	        <%= submit_tag 'Go' %>
        	        <%= submit_tag 'Show all'%>
        	        <ul id="search_parms">
                	     <li><%= check_box_tag(:public_sourceb, true, is_marked('public', :via_conduitb)) %> questions submitted through public site</li>
        		        <li><%= check_box_tag(:widget_sourceb, true, is_marked('widget', :via_conduitb)) %> questions submitted through widget</li>
        		    </ul>
                <% end%>

            </div>

        </div>
        <br class="clear" />
        
        <% if (@date1 && @date2)  || @first_set%>
            <h2>Custom date range</h2>
        
            <table class="general_table datacompare" cellspacing="0">
                <tr>
                    <th></th>
                    
                    <th class="period1"><%= (@dateinterval) ? "#{Time.parse(@date1.to_s).strftime('%b %e, %Y')} - #{Time.parse(@date2.to_s).strftime('%b %e, %Y')}" : "#{Time.parse(@oldest_date.to_s).strftime('%b %e, %Y')} - #{Time.now.strftime('%b %e, %Y')} <span>(all data)</span>"%></th>   
                    <th class="period2"><%= (@dateintervalc) ? "#{Time.parse(@datec1.to_s).strftime('%b %e, %Y')} - #{Time.parse(@datec2.to_s).strftime('%b %e, %Y')}" : "#{Time.parse(@oldest_date.to_s).strftime('%b %e, %Y')} - #{Time.now.strftime('%b %e, %Y')} <span>(all data)</span>"%></th>
                </tr>
                <tr>
                    <td>Total Questions Submitted</td>
                    <td class="count"><%= @number_questions%></td>
                    <% if (@datec1 && @datec2)  || @sec_set%>
                    <td class="count"><%= @numbc_questions%></td>
                    <% end %>
                </tr>
                <tr>
	                <td>Remaining Unanswered Questions</td>
	                <td class="count"><%= @avg_still_open%></td>
	                <% if (@datec1 && @datec2)  || @sec_set%>
	                <td class="count"><%= @avgc_still_open%></td>
	                <% end %>
	            </tr>
                <tr>
                    <td>Average Response Time in Last <%= @nodays%> Days of Period</td>
                   <td class="count"><%= avg_display(@avg_resp_past30)  %> <%= avg_display_units(@avg_resp_past30)%></td>
                   <% if (@datec1 && @datec2)  || @sec_set%>
                   <td class="count"><%= avg_display(@avgc_resp_past30) %> <%= avg_display_units(@avgc_resp_past30)%></td>
                       <% end %>
                </tr>

                <tr >
                    <td>Average Response Time for Answered Questions</td>
                    <td class="count"><%= avg_display(@avg_response_time) %> <%= avg_display_units(@avg_response_time) %></td>
                    <% if (@datec1 && @datec2)  || @sec_set%>
                    <td class="count"><%= avg_display(@avgc_response_time) %> <%= avg_display_units(@avgc_response_time) %></td>
                    <% end %>
                </tr>
            </table>
        <%end%>


    
    
</div>