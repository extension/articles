<% @page_title = "List of Answering Individuals by Selected Category, State, County" %>



<% if (@dir == "C")%>
<p id="activity_report">
    <%= link_to "All Reports",  :controller => 'reports' %> &gt; 
    <%= link_to "Ask an Expert Volunteers", :action => 'answerers' %> &gt; 
    <%= link_to @catname, :action => 'state_answerers', :category => @catname%> &gt; 
    <%= link_to @statename,  :action => 'county_answerers', :State => @statename, :Category => @catname , :dir => @dir%> &gt; All counties</p>
<%else%>
<p id="activity_report">
    <%= link_to "All Reports",  :controller => 'reports' %> &gt; 
    <%= link_to "Ask an Expert Volunteers", :action => 'answerers' %> &gt; 
    <%= link_to @statename, :action => 'category_county', :State => @statename %> &gt; 
    <%= link_to @catname,  :action => 'county_answerers', :State => @statename, :Category => @catname, :dir => @dir %> &gt; All counties</p>
<%end%>

<div id="answerers">

<h1><% if (@dir == "C")%>
    <%= @capcatname %>, <%= @statename %>, <%= @county %>
    <%else%>
    <%= @statename %>, <%= @capcatname %>, <%= @county %>
	<%end%>
</h1>


    <div>
    <ul class="users">

      <% if @usize && @usize > 0 %>
         
        <%= render(:partial => 'usrlst') %>
        	
      <%else%>
         <h2>There are no users volunteering here</h2>
      <%end%>
      	
    </div>
</div>