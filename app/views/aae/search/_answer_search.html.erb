<div class="aae_module">
    <h3>Search for an answer</h3>
    <% form_tag(aae_answer_search_url, {:method => 'get'}) do %>
    <p>
       <%= text_field_tag "q", params[:q], :size => 24 %>
       <%= submit_tag "Search" %>
       <%= hidden_field_tag(:squid, @submitted_question.id) %>
       
       <ul id="search_parameters">
           <li><%= radio_button_tag('search_type', "FAQ", is_checked('faq')) %> FAQ</li>
           <li><%= radio_button_tag('search_type', "AAE", is_checked('aae')) %> AaE</li>
       </ul>
       <br class="clear"/>
    </p>
    <% end %>
</div>