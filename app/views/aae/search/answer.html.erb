<% @page_title = "Resolve with an existing answer" %>
<div id="inc_body">
    
    <h3><%= link_to "Incoming Question #{@submitted_question.id}", aae_question_url(:id => @submitted_question.id) %> > Search Result Details</h3>
    
    <p class="clear"><strong><%= link_to "Return to search results", aae_answer_search_url(:squid => @submitted_question, :q => params[:q]) %></strong></p>
    
    <h2 class="inc_question"><span><%= @submitted_question.asked_question %></span></h2>
    <br class="clear" />
    
    <p class="inc_descriptive"><strong><%= @submitted_question.submitter_fullname %></strong> submitted this question <%= time_ago_in_words(@submitted_question.created_at) %> ago</p>
</div>

<div class="clearing">
    <% if @submitted_question.assignee.id != @currentuser.id %>
    <h3>If you want to answer this question, you need to first assign it to yourself on the <%= link_to "Question page", aae_question_url(:id => @submitted_question.id) %>.</h3>
    <% else %>
    <h3><%= link_to "This is a relevant answer. Use it to write my response.", :controller => 'aae/question', :action => 'answer', :question => @aae_search_item, 
            :squid => @submitted_question %></h3>
    <% end %>
</div>


<%= render(:partial => "aae/question/question_summary") %>

