<% @page_title = "Enter New FAQ" %>

<h1><%= @page_title %></h1>

<%= render(:partial => "partial/flashmessages") %>

<form action="create" name="faq_form" id="faq_form" method="post">
  <%= hidden_field_tag("squid", @submitted_question.id) %>

  <div class="form_section textarea_group">
      <fieldset>
          <p><label for="question">Question</label>
          <%= text_area_tag 'question', @submitted_question.asked_question, :rows => 3, :class => 'entry', "onChange" => "fitTextArea(this)", "onKeyUp" => "fitTextArea(this)" %></p>
      </fieldset>

      <fieldset>
          <p><label for="answer">Answer</label>
          <%= text_area_tag 'answer', @submitted_question.current_response, :rows => 8, :class => 'entry', "onChange" => "fitTextArea(this)", "onKeyUp" => "fitTextArea(this)" %>
          </p>
      </fieldset>  
  </div>

<p><%= submit_tag "Save New Question", :disable_with => "Saving..." %></p>
</form>
